<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
      We Lab
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
      name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="css/material-dashboard.css?v=2.1.0" rel="stylesheet"/>
    <link rel="stylesheet" href="css/ajustes.css"/>
    <link rel="shortcut icon" href="img/imagens-weblab/weblab-icone.ico"/>
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <!-- <link href="../assets/demo/demo.css" rel="stylesheet" /> -->
  </head>

  <body>
    <!-- Menu -->
    <div class="wrapper">
      <div class="sidebar" data-color="green" data-background-color="black">
        <div class="logo">
          <a href="" class="simple-text logo-normal">
            Web Lab
          </a>
        </div>
        <div class="sidebar-wrapper">
          <ul class="nav">
            <li class="nav-item">
              <form class="logout2" action="/logout" method="POST">
                <button type="submit"><i class="material-icons nav-link">logout</i><p>Sair</p></button>
              </form>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/home">
                <i class="material-icons">home</i>
                <p>Página inicial</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/usuario">
                <i class="material-icons">person</i>
                <p>Perfil de usuário</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/agendamentos">
                <i class="material-icons">calendar_today</i>
                <p>Agendamentos</p>
              </a>
            </li>  
            <li class="nav-item active">
              <a class="nav-link" href="/tecnicos">
                <i class="material-icons">supervisor_account</i>
                <p>Técnicos dos laboratórios</p>
              </a>
            </li>
            <%if (nivelUsuario == "1") {%>
              <li class="nav-item">
                <a class="nav-link" href="/pagina_cadastro_usuarios">
                  <i class="material-icons">assignment_ind</i>
                  <p>Cadastrar usuários</p>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/cadastro_itens">
                  <i class="material-icons">assignment</i>
                  <p>Cadastrar itens</p>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/cadastro_avisos">
                  <i class="material-icons">assignment_late</i>
                  <p>Cadastrar avisos</p>
                </a>
              </li>
            <%}%>
            <%if (nivelUsuario == "1") {%>
              <li class="nav-item">
                <a class="nav-link" href="/lista_agendamentos">
                  <i class="material-icons">list</i>
                  <p>Lista de agendamentos</p>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/lista_usuarios">
                  <i class="material-icons">people</i>
                  <p>Lista de usuários</p>
                </a>
              </li>
            <%}%> 
            <li class="nav-item">
              <a class="nav-link" href="/equipamentos">
                <i class="material-icons">build</i>
                <p>Equipamentos</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/produtos">
                <i class="material-icons">bubble_chart</i>
                <p>Produtos</p>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/mural_avisos">
                <i class="material-icons">notifications</i>
                <p>Mural de avisos</p>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <!-- Menu -->
      <div class="main-panel">
        <!-- Barra de navegação -->
        <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-example">
          <div class="container-fluid">
            <div class="navbar-wrapper">
              <a class="navbar-brand" href="javascript:void(0)">Técnicos dos Laboratórios</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index"
              aria-expanded="false" aria-label="Toggle navigation" data-target="#navigation-example">
              <span class="sr-only">Toggle navigation</span>
              <span class="navbar-toggler-icon icon-bar"></span>
              <span class="navbar-toggler-icon icon-bar"></span>
              <span class="navbar-toggler-icon icon-bar"></span>
            </button>
          </div>
        </nav>
        <!-- Barra de navegação -->
        <!-- Conteúdo principal -->
        <div class="content mt-1">
          <div class="container-fluid">
            <div class="row">
              <%if (tecnicos.length > 0) {%>
                <%for (let i = 0; i < tecnicos.length; i++) {%>
                  <%if (tecnicos[i].status_usuario != "DESATIVADO") {%>
                    <div class="col-md-6">
                      <div class="card">
                        <div class="card-header bg-success">
                          <%if (laboratorios.length > 0) {%>
                            <%for (let y = 0; y < laboratorios.length; y++) {%>
                              <%if (laboratorios[y].id_usuario == tecnicos[i].id_usuario) {%>
                                <h3 class="card-title text-white text-center"><%=laboratorios[y].nome_laboratorio%></h3>
                              <%}%>  
                            <%}%>  
                          <%}%>  
                        </div>
                        <div class="card-body">
                          <div class="row mt-4">
                            <div class="col-md-12">
                              <div class="card-profile">
                                <div class="card-avatar pull-right">
                                  <img class="img" src="img/imagens-usuarios/<%=tecnicos[i].imagem_usuario%>"/>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-12">
                              <div class="form-group">
                                <label class="bmd-label-floating">Nome</label>
                                <p class="form-control" id="tecnico1-nome"><%=tecnicos[i].nome_usuario%></p>
                              </div>
                            </div>
                            <div class="col-md-12">
                              <div class="form-group">
                                <label class="bmd-label-floating">E-mail</label>
                                <p class="form-control" id="tecnico1-email"><%=tecnicos[i].email_usuario%></p>
                              </div>
                            </div>
                          </div>
                          <div class="row mt-4">
                            <div class="col-md-12">
                              <div class="responsbile-table">
                                <%if (permanencia.length > 0) {%>
                                  <%for (let x = 0; x < permanencia.length; x++) {%>
                                    <%if (permanencia[x].id_usuario == tecnicos[i].id_usuario) {%>
                                      <h3>Horário do técnico</h3>
                                      <table class="table">
                                        <thead>
                                          <th>Dia</th>
                                          <th>Manhã</th>
                                          <th>Tarde</th>
                                        </thead>
                                        <tbody>
                                          <tr>
                                            <td>Segunda-feira</td>
                                            <td><%=permanencia[x].segunda_feira_manha%></td>
                                            <td><%=permanencia[x].segunda_feira_tarde%></td>
                                          </tr>
                                          <tr>
                                            <td>Terça-feira</td>
                                            <td><%=permanencia[x].terca_feira_manha%></td>
                                            <td><%=permanencia[x].terca_feira_tarde%></td>
                                          </tr>
                                          <tr>
                                            <td>Quarta-feira</td>
                                            <td><%=permanencia[x].quarta_feira_manha%></td>
                                            <td><%=permanencia[x].quarta_feira_tarde%></td>
                                          </tr>
                                          <tr>
                                            <td>Quinta-feira</td>
                                            <td><%=permanencia[x].quinta_feira_manha%></td>
                                            <td><%=permanencia[x].quinta_feira_tarde%></td>
                                          </tr>
                                          <tr>
                                            <td>Sexta-Feira</td>
                                            <td><%=permanencia[x].sexta_feira_manha%></td>
                                            <td><%=permanencia[x].sexta_feira_tarde%></td>
                                          </tr>
                                        </tbody>
                                      </table>
                                    <%}%>  
                                  <%}%>  
                                <%}%> 
                              </div>
                            </div>
                            <%if (nivelUsuario == "1") {%>
                              <div class="col-md-12">
                                <a href="/atualizacao_permanencia" class="btn pull-right col col-md">EDITAR PERMANÊNCIA</a>
                                <a href="/cadastro_permanencia" class="btn btn-success pull-right col col-md">CADASTRAR PERMANÊNCIA</a>
                              </div>
                            <%}%>  
                          </div>
                        </div>
                      </div>
                    </div>
                  <%}%> 
                <%}%>   
              <%}%>
            </div>
          </div>
        </div>
      </div>
      <!--Conteúdo principal-->
      <!--   Core JS Files   -->
      <script src="js/core/jquery.min.js"></script>
      <script src="js/core/popper.min.js"></script>
      <script src="js/core/bootstrap-material-design.min.js"></script>
      <script src="https://unpkg.com/default-passive-events"></script>
      <script src="js/plugins/perfect-scrollbar.jquery.min.js"></script>
      <!-- Place this tag in your head or just before your close body tag. -->
      <script async defer src="https://buttons.github.io/buttons.js"></script>
      <!--  Google Maps Plugin    -->
      <!-- <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script> -->
      <!-- Chartist JS -->
      <script src="js/plugins/chartist.min.js"></script>
      <!--  Notifications Plugin    -->
      <script src="js/plugins/bootstrap-notify.js"></script>
      <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
      <script src="js/material-dashboard.js?v=2.1.0"></script>
      <!-- Material Dashboard DEMO methods, don't include it in your project! -->
      <script src="demo/demo.js"></script>
  </body>

</html>