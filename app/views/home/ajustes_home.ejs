                              <i class="material-icons">insert_photo</i>&nbsp;ESCOLHER FOTO</label>
                            <a href="/home" class="btn btn-danger col-md-12">CANCELAR</a>
                            <button type="submit" class="btn btn-success col-md-12">ATUALIZAR</button>
                          </form>
                        </div>
                      <%}%>
