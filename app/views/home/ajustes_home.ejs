          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header bg-success">
                    <div class="row">
                      <div class="col-md-12 text-center">
                        <h3 class="card-title text-white">Área do Administrador</h3>
                      </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-12"><h3 class="text-center">LABORATÓRIOS</h3></div>
                      <%if (laboratorios.length > 0) {%>
                        <div class="col-md-6">
                          <form action="/atualizar_laboratorio0" method="POST" enctype="MULTIPART/FORM-DATA">
                            <h3 class="text-center"><%=laboratorios[0].nome_laboratorio%></h3>
                            <div class="form-group" class="invisivel">
                              <input type="text" class="invisivel" name="imagem_padrao" value="<%=laboratorios[0].imagem_laboratorio%>"/>
                            </div>
                            <div class="form-group" class="invisivel">
                              <input type="text" class="invisivel" name="id_laboratorio" value="<%=laboratorios[0].id_laboratorio%>"/>
                            </div>
                            <div class="form-group" class="invisivel">
                              <input type="text" class="invisivel" name="id_tecnico_laboratorio" value="<%=laboratorios[0].id_usuario%>"/>
                            </div>
                            <%if (validacaoLab0.length > 0) {%>
                              <%if (validacaoLab0[0].msg == "0") {%>
                                <span class="text-danger">Campo vazio!</span>
                              <%}%>  
                            <%}%>  
                            <div class="form-group mt-4">
                              <label class="bmd-label-floating">Descrição do laboratório</label>
                              <textarea class="form-control" name="descricao_laboratorio_atualizacao" cols="30" rows="10"><%=laboratorios[0].descricao_laboratorio%></textarea>
                            </div>
                            <div class="form-group">
                              <h4 class="mt-2">Definir técnico</h4>
                              <select class="custom-select" name="novo_tecnico_laboratorio">
                                <option value="">ESCOLHER</option>
                                <%if (tecnicos.length > 0) {%>
                                  <%for (let i = 0; i < tecnicos.length; i++) {%>
                                    <option value="<%=tecnicos[i].id_usuario%>"><%=tecnicos[i].nome_usuario%></option>
                                  <%}%>  
                                <%}%> 
                              </select> 
                            </div>
                            <h4 class="mt-2">Foto do laboratório</h4>
                            <input type="file" id="id_laboratorio_imagem0" name="imagem_laboratorio" accept=""/>
                            <label id="id_label_laboratorio0" for="id_laboratorio_imagem0">
                              <i class="material-icons">insert_photo</i>&nbsp;ESCOLHER FOTO</label>
                            <a href="/home" class="btn btn-danger col-md-12">CANCELAR</a>
                            <button type="submit" class="btn btn-success col-md-12">ATUALIZAR</button>
                          </form>
                        </div> 
                        <div class="col-md-6">
                          <form action="/atualizar_laboratorio1" method="POST" enctype="MULTIPART/FORM-DATA">
                            <h3 class="text-center"><%=laboratorios[1].nome_laboratorio%></h3>
                            <div class="form-group" class="invisivel">
                              <input type="text" class="invisivel" name="imagem_padrao" value="<%=laboratorios[1].imagem_laboratorio%>"/>
                            </div>
                            <div class="form-group" class="invisivel">
                              <input type="text" class="invisivel" name="id_laboratorio" value="<%=laboratorios[1].id_laboratorio%>"/>
                            </div>
                            <div class="form-group" class="invisivel">
                              <input type="text" class="invisivel" name="id_tecnico_laboratorio" value="<%=laboratorios[1].id_usuario%>"/>
                            </div>
                            <%if (validacaoLab1.length > 0) {%>
                              <%if (validacaoLab1[0].msg == "0") {%>
                                <span class="text-danger">Campo vazio!</span>
                              <%}%>  
                            <%}%>  
                            <div class="form-group mt-4">
                              <label class="bmd-label-floating">Descrição do laboratório</label>
                              <textarea class="form-control" name="descricao_laboratorio_atualizacao" cols="30" rows="10"><%=laboratorios[1].descricao_laboratorio%></textarea>
                            </div>
                            <div class="form-group">
                              <h4 class="mt-2">Definir técnico</h4>
                              <select class="custom-select" name="novo_tecnico_laboratorio">
                                <option value="">ESCOLHER</option>
                                <%if (tecnicos.length > 0) {%>
                                  <%for (let i = 0; i < tecnicos.length; i++) {%>
                                    <option value="<%=tecnicos[i].id_usuario%>"><%=tecnicos[i].nome_usuario%></option>
                                  <%}%>  
                                <%}%> 
                              </select> 
                            </div>
                            <h4 class="mt-2">Foto do laboratório</h4>
                            <input type="file" id="id_laboratorio_imagem1" name="imagem_laboratorio" accept=""/>
