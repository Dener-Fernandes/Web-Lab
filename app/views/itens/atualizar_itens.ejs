                <div class="card-body">
                  <div class="row">
                    <div class="col-md-6">
                      <h3 class="text-center">Cadastrar equipamento</h3>
                      <form action="/atualizar_equipamento" method="POST" enctype="MULTIPART/FORM-DATA">
                        <div class="card-profile">
                            <div class="pull-right">
                                <div class="col-md-10">
                                    <%if (equipamento.length > 0) {%>
                                      <img class="foto" src="img/imagens-equipamentos/<%=equipamento[0].imagem_equipamento%>" width="150px" height="150px" alt="Imagem indisponível"/>
                                      <input type="text" class="invisivel" name="imagem_padrao" value="<%=equipamento[0].imagem_equipamento%>"/>
