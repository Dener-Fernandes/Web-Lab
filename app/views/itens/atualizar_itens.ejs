                              <option value="<%=laboratorios[1].id_laboratorio%>"><%=laboratorios[1].nome_laboratorio%></option>
                            <%}%>  
                          </select>
                        </div>
                        <h4 class="mt-2">Foto do produto</h4>
                        <input class="mt-4" type="file" id="id_produto_imagem" name="imagem_produto" accept=""/>
                        <label id="id_label_produto" for="id_produto_imagem">
                        <i class="material-icons">insert_photo</i>&nbsp;ESCOLHER FOTO</label>
