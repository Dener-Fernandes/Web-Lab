                                      <%}%>  
                                </div>
                            </div>
                          </div>
                          <div class="row"></div>
                          <div class="form-group invisivel">
                            <%if (equipamento.length > 0) {%>
                              <input type="text" class="invisivel" name="id_equipamento" value="<%=equipamento[0].id_equipamento%>"readonly/>
                            <%} else {%>
                              <input type="text" class="invisivel" name="id_equipamento" value=""readonly/>
                            <%}%>  
                          </div>
                        <%if (validacaoEquipamento.length > 0) {%>
                          <%for (let i = 0; i < validacaoEquipamento.length; i++) {%>
                            <%if (validacaoEquipamento[i].msg == "0") {%>
                              <span class="text-danger">Campo vazio!</span>
                            <%}%>
                            <%if (validacaoEquipamento[i].msg == "1") {%>
                              <span class="text-danger">Tamanho inválido!</span>
                            <%}%>   
                          <%}%>  
                        <%}%>  
                        <div class="form-group mt-4">
                          <label class="bmd-label-floating">Nome do equipamento</label>
                          <%if (equipamento.length > 0) {%>
                            <input type="text" class="form-control" name="nome_equipamento_atualizacao" value="<%=equipamento[0].nome_equipamento%>"/>
                          <%} else {%>
                              <input type="text" class="form-control" name="nome_equipamento_atualizacao" value=""/>
                          <%}%> 
                        </div>
                        <%if (validacaoEquipamento.length > 0) {%>
                          <%for (let i = 0; i < validacaoEquipamento.length; i++) {%>
                            <%if (validacaoEquipamento[i].msg == "2") {%>
                              <span class="text-danger">O valor precisa ser um núemro!</span>
                            <%}%>
                            <%if (validacaoEquipamento[i].msg == "3") {%>
                              <span class="text-danger">O número precisa ser do tipo inteiro!</span>
                            <%}%>   
                          <%}%>  
                        <%}%> 
                        <div class="form-group">
                          <label class="bmd-label-floating">Quantidade do equipamento</label>
                          <%if (equipamento.length > 0) {%>
                            <input type="text" class="form-control" name="quantidade_equipamento_atualizacao" value="<%=equipamento[0].quantidade_equipamento%>"/>
                          <%} else {%>
                            <input type="text" class="form-control" name="quantidade_equipamento_atualizacao" value=""/>
                          <%}%> 
                        </div>
                        <%if (validacaoEquipamento.length > 0) {%>
                          <%for (let i = 0; i < validacaoEquipamento.length; i++) {%>
                            <%if (validacaoEquipamento[i].msg == "4") {%>
                              <span class="text-danger">Campo vazio!</span>
                            <%}%>
                            <%if (validacaoEquipamento[i].msg == "5") {%>
                              <span class="text-danger">O valor precisa ser um núemro!</span>
                            <%}%>
                            <%if (validacaoEquipamento[i].msg == "6") {%>
                              <span class="text-danger">O número precisa ser do tipo inteiro!</span>
                            <%}%>   
                          <%}%>  
                        <%}%> 
                        <div class="form-group">
                          <label class="bmd-label-floating">Número de patrimônio</label>
                          <%if (equipamento.length > 0) {%>
                            <input type="text" class="form-control" name="numero_patrimonio_atualizacao" value="<%=equipamento[0].numero_patrimonio%>"/>
                          <%} else {%>
                            <input type="text" class="form-control" name="numero_patrimonio_atualizacao" value=""/>
                          <%}%>
                        </div>
                        <%if (validacaoEquipamento.length > 0) {%>
                          <%for (let i = 0; i < validacaoEquipamento.length; i++) {%>
                            <%if (validacaoEquipamento[i].msg == "7") {%>
                              <span class="text-danger">O status do equipamento é obrigatório!</span>
                            <%}%>   
                          <%}%>  
                        <%}%> 
                        <div class="form-group">
                          <h4>Status do equipamento</h4>
                          <select class="custom-select" name="status_equipamento_atualizacao">
                            <option value="">ESCOLHER</option>
                            <option value="DISPONÍVEL">DISPONÍVEL</option>
                            <option value="INDISPONÍVEL">INDISPONÍVEL</option>
                          </select>
                        </div>
                        <%if (validacaoEquipamento.length > 0) {%>
                          <%for (let i = 0; i < validacaoEquipamento.length; i++) {%>
                            <%if (validacaoEquipamento[i].msg == "8") {%>
                              <span class="text-danger">O laboratório é obrigatório</span>
                            <%}%>   
                          <%}%>  
                        <%}%>
                        <div class="form-group">
                          <h4>Pertence a qual laboratório</h4>
                          <select class="custom-select" name="pertence_laboratorio_atualizacao">
                            <%if (laboratorios.length > 0) {%>
                              <option value="">ESCOLHER</option>
                              <option value="<%=laboratorios[0].id_laboratorio%>"><%=laboratorios[0].nome_laboratorio%></option>
                              <option value="<%=laboratorios[1].id_laboratorio%>"><%=laboratorios[1].nome_laboratorio%></option>
                            <%}%>  
                          </select>
                        </div> 
                        <h4 class="mt-2">Foto do equipamento</h4>
