                  <h4 class="card-title">Editar perfil</h4>
                  <p class="card-category">Atualize suas informações</p>
                  <a href="/dados_perfil?id_usuario=<%=usuario[0].id_usuario%>" class="btn">EDITAR</a>
                  <div class="card-profile">
                    <div class="card-avatar pull-right">
                      <img class="img" src="img/imagens-usuarios/<%=usuario[0].imagem_usuario%>" />
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <form>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <h4><b>Nome</b></h4>
                          <input type="text" class="form-control espInterno" value="<%=usuario[0].nome_usuario%>"
                            readonly/>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <h4><b>E-mail</b></h4>
                          <input type="email" class="form-control espInterno" value="<%=usuario[0].email_usuario%>"
                            readonly/>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <h4><b>Senha</b></h4>
                          <input type="password" class="form-control espInterno" value="<%=usuario[0].senha_usuario%>"
                            readonly/>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <h4><b>CPF</b></h4>
                          <input type="text" class="form-control espInterno" value="<%=usuario[0].cpf_usuario%>"
                            readonly/>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
