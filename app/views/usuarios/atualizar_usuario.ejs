        </nav>
        <!-- End Navbar -->
        <div class="content mt-1">
          <div class="container-fluid">
            <%if (usuario.length > 0) {%>
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                  </div>
                  <div class="card-body">
                    <form action="/atualizar_usuario" method="POST" enctype="MULTIPART/FORM-DATA">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="row">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                              <div class="card-profile">
                                <div class="pull-right">
                                  <img class="foto" src="img/imagens-usuarios/<%=usuario[0].imagem_usuario%>" alt="Imagem indisponível"/>
                                  <input class="mt-4" type="file" id="id_foto" name="imagem_usuario" accept=""/>
                                  <label id="id_label_foto" for="id_foto">
                                  <i class="material-icons icone">camera_alt</i></label>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-md-8"></div>
                            <div class="col-md-4">
                              <span class="pull-right mt-1 aviso">A foto será alterada após concluir a edição</span>
                            </div>
                          </div> 
                        </div>
                        <div class="col-md-6">
                          <div class="fomr-group invisivel">
                            <input type="text" class="invisivel" name="imagem_padrao" value="<%=usuario[0].imagem_usuario%>"/>
                          </div>
                        </div>
                         <div class="col-md-6">
                          <%if (nivelUsuario == "1") {%>
                            <div class="form-group invisivel">
                              <input type="text" class="form-control invisivel" name="id_usuario" value="<%=usuario[0].id_usuario%>"/>  
                            </div>
                          <%}%>  
                         </div>
                        <div class="col-md-12"> 
                          <%if (validacaoUsuario.length > 0) {%>
                            <%for (let i = 0; i < validacaoUsuario.length; i++) {%>
                              <%if (validacaoUsuario[i].msg == "0") {%>
                                <span class="text-danger">Campo vazio!</span>
                              <%}%>
                              <%if (validacaoUsuario[i].msg == "1") {%>
                                <span class="text-danger">Tamanho inválido!</span>
                              <%}%>   
                            <%}%>  
                          <%}%>
                          <div class="form-group mt-3">
                            <label class="bmd-label-floating">Nome completo</label>
                            <input type="text" class="form-control" name="nome_usuario_atualizacao" value="<%=usuario[0].nome_usuario%>"/>
                          </div>
                        </div>                       
                        <div class="col-md-6">
                          <%if (validacaoUsuario.length > 0) {%>
                            <%for (let i = 0; i < validacaoUsuario.length; i++) {%>
                              <%if (validacaoUsuario[i].msg == "2") {%>
                                <span class="text-danger">Campo vazio!</span>
                              <%}%>  
                              <%if (validacaoUsuario[i].msg == "3") {%>
                                <span class="text-danger">Tamanho inválido (Mínimo 5 dígitos)!</span>
                              <%}%>
                              <%if (validacaoUsuario[i].msg == "4") {%>
                                <span class="text-danger">E-mail inválido!</span>
                              <%}%>
                            <%}%>  
                          <%}%>
                          <div class="form-group mt-3">
                            <label class="bmd-label-floating">E-mail</label>
                            <input type="email" class="form-control" name="email_usuario_atualizacao" value="<%=usuario[0].email_usuario%>"/>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <%if (validacaoUsuario.length > 0) {%>
                            <%for (let i = 0; i < validacaoUsuario.length; i++) {%>
                              <%if (validacaoUsuario[i].msg == "5") {%>
                                <span class="text-danger">Campo vazio!</span>
                              <%}%>  
                              <%if (validacaoUsuario[i].msg == "6") {%>
                                <span class="text-danger">Tamanho inválido (Mínimo 8 dígitos)!</span>
                              <%}%>
                            <%}%>  
                          <%}%>
                          <div class="form-group mt-3">
                            <label class="bmd-label-floating">Senha</label>
                            <input type="password" class="form-control" name="senha_usuario_atualizacao" value="<%=usuario[0].senha_usuario%>"/>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <%if (validacaoUsuario.length > 0) {%>
                            <%for (let i = 0; i < validacaoUsuario.length; i++) {%>
                              <%if (validacaoUsuario[i].msg == "7") {%>
                                <span class="text-danger">Campo vazio!</span>
                              <%}%>  
                            <%}%> 
                          <%}%> 
                          <%if (validacaoCpf.length > 0) {%>
                            <%if (validacaoCpf == "0") {%>
                              <span class="text-danger">CPF inválido!</span>
                            <%}%>  
                          <%}%>  
                          <div class="form-group mt-3">
                            <label class="bmd-label-floating">CPF (somente números)</label>
                            <input type="text" class="form-control" name="cpf_usuario_atualizacao" value="<%=usuario[0].cpf_usuario%>"/>
                          </div>
                        </div>
                        <div class="clearfix"></div>
                      </div>
                      <div class="row">
                        <a href="/home" class="btn btn-danger pull-right col-12 col-md">CANCELAR</a>
                        <button type="submit" class="btn btn-success pull-right col-12 col-md">ATUALIZAR</button>  
                      </div>  
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <%}%>
          </div>
        </div>
      </div>
